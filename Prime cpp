#include <iostream>
#include <cmath>

bool is_prime(int n) {
  if (n <= 1) {
    return false;
  }
  for (int i = 2; i <= sqrt(n); i++) {
    if (n % i == 0) {
      return false;
    }
  }
  return true;
}

int main() {
  std::cout << "Enter a positive integer: ";
  int n;
  std::cin >> n;
  if (is_prime(n)) {
    std::cout << n << " is a prime number." << std::endl;
  } else {
    std::cout << n << " is not a prime number." << std::endl;
  }
  return 0;
}
