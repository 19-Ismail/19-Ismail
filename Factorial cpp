Factorial
#include <iostream>

int factorial(int n) {
  if (n == 0) {
    return 1;
  }
  return n * factorial(n - 1);
}

int main() {
  std::cout << "Enter a non-negative integer: ";
  int n;
  std::cin >> n;
  std::cout << "The factorial of " << n << " is " << factorial(n) << std::endl;
  return 0;
}
